
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color:black;
            background-image: url('https://templatekit.jegtheme.com/pirus/wp-content/uploads/sites/43/2024/04/bg-footer2.jpg');
            background-size:contain;
        }
        h2{
            margin-top: 10px;
            color: white;
        }
        .login-container {
            background-color:transparent;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            width: 100%;
            max-width: 400px;
            text-align: center;
            border: 1px solid #fff;
        }
        h4{
            color:red;
        }
        .logo {
            width: 150px;
        }

        .input-field {
            color: white;
            background-color: transparent;
            width: 94%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .btn {
            width: 100%;
            padding: 12px;
            background-color:transparent;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            border: 1px solid #ccc;
            transition: background-color 0.3s;
        }
        @@media (max-width: 480px) {
            .login-container

        {
            padding: 20px;
        }

        .logo {
            width: 120px;
        }

        }
    </style>
</head>
<body>

    <div class="login-container">
        <img src="~/images/Group 10.png" alt="Logo" class="logo">
        <h2>Admin Login</h2>
        <h4 class="text-danger text-center">@TempData["msg"]</h4>
        <form asp-action="Login" method="post">
            <input type="email" name="email" class="input-field" placeholder="Email" required>
            <input type="password" name="password" class="input-field" placeholder="Password" required>
            <button type="submit" class="btn">Login</button>
        </form>
    </div>

</body>
</html>
