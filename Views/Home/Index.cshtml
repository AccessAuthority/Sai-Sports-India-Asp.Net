<script>

    let currentIndex = 0;
    const cards = document.querySelectorAll('.p-card');
    const totalCards = cards.length;
    const pCardsContainer = document.querySelector('.p-cards');
    let visibleCards = window.innerWidth < 768 ? 1 : 3; // Show 1 card on small screens, 3 cards on larger screens
    let cardWidth = window.innerWidth < 768 ? 320 : 420; // Default to 300px on small screens, 420px on larger screens

    const updateCarouselPosition = () => {
        pCardsContainer.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
    };

    // Function to handle the "Previous" button click
    const prevSlide = () => {
        if (currentIndex === 0) {
            currentIndex = totalCards - visibleCards; // Go to the last card if it's at the first one
        } else {
            currentIndex--;
        }
        updateCarouselPosition();
    };

    // Function to handle the "Next" button click
    const nextSlide = () => {
        if (currentIndex === totalCards - visibleCards) {
            currentIndex = 0; // Reset to the first card if it's at the last one
        } else {
            currentIndex++;
        }
        updateCarouselPosition();
    };

    // Add event listeners to the buttons
    document.querySelector('.prev-btn').addEventListener('click', prevSlide);
    document.querySelector('.next-btn').addEventListener('click', nextSlide);

    // Optional: Auto slide every 3 seconds
    setInterval(nextSlide, 3000); // Slide every 3 seconds

    // Adjust carousel behavior on screen resize
    window.addEventListener('resize', () => {
        if (window.innerWidth < 768) {
            visibleCards = 1; // Show 1 card on small screens
            cardWidth = 320;  // 300px card width on small devices
        } else {
            visibleCards = 3; // Show 3 cards on large screens
            cardWidth = 420;  // 420px card width on large devices
        }
        updateCarouselPosition();  // Update carousel position based on the new width and number of visible cards
    });



        // Function to animate the counters
    const counters = document.querySelectorAll('.counter');

    const countUp = () => {
      counters.forEach(counter => {
        const updateCount = () => {
          const target = +counter.getAttribute('data-target');
          const current = +counter.innerText;
          const increment = target / 100; // Increment by 1% of the target value

          if (current < target) {
            counter.innerText = Math.ceil(current + increment);
            setTimeout(updateCount, 1); // Update every millisecond for a smooth effect
          } else {
            counter.innerText = target; // Set to target value once reached
          }
        };
        updateCount();
      });
    };

        // Trigger the animation once the user scrolls to the statistics section
    const section = document.querySelector('.statistics');
    const options = {
      rootMargin: '0px 0px -100px 0px'
    };
    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          countUp(); // Start animation when section is visible in viewport
          observer.disconnect(); // Disconnect the observer once the animation is triggered
        }
      });
    }, options);

    observer.observe(section);


     // Function to open the modal
    function openModal() {
        document.getElementById("quoteModal").style.display = "block";
    }

    // Function to close the modal
    function closeModal() {
        document.getElementById("quoteModal").style.display = "none";
    }

    // Close the modal if the user clicks outside of it
    window.onclick = function(event) {
        if (event.target === document.getElementById("quoteModal")) {
            closeModal();
        }
    }

    // Handle form submission
    document.getElementById("quoteForm").addEventListener("submit", function(event) {
