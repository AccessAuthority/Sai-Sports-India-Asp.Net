<script>
        // Function to animate the counters
    const counters = document.querySelectorAll('.counter');
    const countUp = () => {
      counters.forEach(counter => {
        const updateCount = () => {
          const target = +counter.getAttribute('data-target');
          const current = +counter.innerText.replace('+', ''); // Remove the + if present, to get the current number
          const increment = target / 100; // Increment by 1% of the target value

          if (current < target) {
            counter.innerText = `${Math.ceil(current + increment)}`; // Update number without + sign during animation
            setTimeout(updateCount, 1); // Update every millisecond for a smooth effect
          } else {
            counter.innerText = `${target}+`; // Add + sign at the end once the target is reached
          }
        };

        counter.innerText = '0'; // Initialize text to 0, no + sign yet
        updateCount();
      });
    };


        // Trigger the animation once the user scrolls to the statistics section
    const section = document.querySelector('.statistics');
    const options = {
      rootMargin: '0px 0px -100px 0px'
    };
    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          countUp(); // Start animation when section is visible in viewport
          observer.disconnect(); // Disconnect the observer once the animation is triggered
        }
      });
    }, options);
    observer.observe(section);

    // Owl Carousel for Partenrs
