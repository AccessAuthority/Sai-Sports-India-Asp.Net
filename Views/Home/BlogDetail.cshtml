@model SaiSports.Models.CombineViewModel
@{
	ViewData["Title"] = "Blog Details";
	Layout = "_Layout";
    var blog = ViewBag.Blog as SaiSports.Models.tbl_blog;
}
<style>
    body{
        color:white;    
        background-image:url('@Url.Content("~/images/bg-footer2.jpg")'); 
        background-size: cover;
        background-attachment: fixed;
    }

    .ellipsis-1 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .ellipsis-8 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp:8;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .breadcrumb{
        margin-top: 70px;
    }
    /* Container for the whole page */
    .container {
        margin-top:10px !important;
        padding-top:20px;
        padding-bottom: 50px;
        width: 100%;
        margin: 0 auto;
    }

    .mt-40{
        margin-top: 40px;
    }
    /* Main content layout */
    .main-content {
        display: flex;
        /* flex-wrap: wrap; */
        gap: 20px;
    }
    .sidebar{
        height:fit-content;
        gap: 10px;
        flex: 1 1 20%; /* Sidebar takes up 20% of the width */
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #fff;
        display: flex;
        flex-direction: column;
        position: sticky;
        top: 100px;
    }
    .r-pst{
        padding-top: 15px;
        border-top: 1px solid #fff;
        display: flex;
        gap: 5px;
    }
    .pst-content{
        width:60%;
    }
    .pst-img img{
        width: 60px;
        object-fit: cover;
        height: 50px;
    }

    /* Blog content styling */
    .blog-content {
        flex: 3 1 80%; /* Take 60% width on larger screens */
    }

        .blog-content h1 {
            font-size: 25px;
            margin-bottom: 5px;
        }

    .date {
        color: white;
        font-size: 15px;
        margin-bottom: 10px;
    }
    .blog-image{
        display:flex;
        gap:20px;
    }
    .blog-image img {
        object-fit:cover;
        width: 100%;
        height: 400px;
        margin-bottom: 20px;
    }

    .desc {
        display: -webkit-box;
        -webkit-line-clamp: 9;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 100%;
        height: auto;
        margin-bottom: 10px;
    }

    /* Responsive Styles */
    @@media (max-width: 1024px) {
        .breadcrumb {
            margin-top: 40px !important;
        }
        .blog-content h1

    {
        font-size: 2em;
    }

        .blog-image {
           flex-direction:column;
        }

            .blog-image img {
                width: 100%;
                height: 300px;
                margin-bottom: 10px;
            }

        .desc {
            width: 100%;
            height: auto;
            margin-bottom: 20px;
        }

    .comments h3 {
        font-size: 1.5em;
    }

    }

    @@media (max-width: 768px) {
        .breadcrumb {
            margin-top: 40px !important;
        }
        .blog-image {
            flex-direction: column;
        }

            .blog-image img {
                width: 100%;
                height: 300px;
                margin-bottom: 10px;
            }

        .desc {
            width: 100%;
            height: auto;
            margin-bottom: 20px;
        }
        .main-content

    {
        flex-direction: column; /* Stack the content and sidebar */
    }

    .blog-content {
        flex: 1 1 100%; /* Blog content takes up full width */
    }

    .sidebar {
        flex: 1 1 100%; /* Sidebar takes full width on mobile */
        margin-top: 20px;
    }

    .blog-content h1 {
        font-size: 1.8em;
    }
    .comments h3 {
        font-size: 1.3em;
    }

    }

    /* Extra small screens (e.g., mobile) */
    @@media (max-width: 480px) {
        .blog-content h1

    {
        font-size: 1.5em;
    }

    .date {
        font-size: 0.9em;
    }

    .sidebar {
        display: none; /* Hide sidebar on very small screens */
    }

    }
</style>
<section class="section-content pb-0 mt-40">
    <div class="breadcrumb">
        <h2>@blog.title</h2>
        <a asp-action="Index">Home</a> <span>></span> <a asp-action="Blog">Blog</a>  <span>></span> <a>@blog.title</a>
    </div>
</section>
<div class="container section-content mt-0">
    <div class="main-content">
        <!-- Blog Content -->
        <div class="blog-content">
            <div class="blog-image">
                <img src="@blog.img" alt="@blog.title" />
            </div>
            <div class="desc">
                <h1>@blog.title</h1>
                <p class="date">Published on @DateTime.Parse(blog.date).ToString("MMMM dd, yyyy") | By @blog.author | Category: @blog.category</p>
            </div>
                @Html.Raw(blog.blog_content)
        </div>
        <div class="sidebar">
            <h3>Recent Blogs</h3>
             @foreach (var recentBlog in Model.tbl_blog)
            {
                <a href="/Home/BlogDetail/@recentBlog.title.Replace(' ', '-')" class="r-pst">
                    <div class="pst-img"><img src="@recentBlog.img" alt="Alternate Text" /></div>
                    <div class="pst-content">
                        <h4 class="ellipsis-1">@recentBlog.title</h4>
                        <p class="date">@DateTime.Parse(recentBlog.date).ToString("MMMM dd, yyyy")</p>
                    </div>
                </a>
            }
    </div>
</div>
</div>