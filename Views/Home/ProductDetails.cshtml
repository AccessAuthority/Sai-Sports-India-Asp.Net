@model SaiSports.Models.tbl_products
@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

<style>
    .dark-section{
        text-align:start;
    }
    /* Modal styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        border: 1px solid #ddd;
        text-align:center;
        background-color: rgba(0, 0, 0, 0.9);
        padding: 20px;
        width: 90%;
        max-width: 500px;
        border-radius: 8px;
        position: relative;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    input, .submit-btn {
        font-size: 14px;
        width: 100%;
        height:40px;
        margin-top:10px;
        background-color:transparent;
        color: white;
        padding-left: 10px;
        border: 1px solid #ddd;
    }

    textarea {
        font-size: 16px;
        border: 1px solid #ddd;
        padding-left: 10px;
        padding-top: 10px;
        width: 100%;
        margin-top: 10px;
        background-color: transparent;
        color: white;
    }

    ::placeholder {
        color: white;
    }
    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 1.5rem;
        color: #ddd;
        cursor: pointer;
    }

        .close-btn:hover {
            color: #fff;
        }

    /* Product Card styles */
    .product-card {
        color:white;
        display: flex;
        padding-top:0;
        padding:20px 40px 40px 40px;
        background-color:transparent;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 1340px;
        border-radius: 8px;
    }

    .product-info {
        flex: 1 1 40%;
        margin-right: 20px;
    }

        .product-info h1 {
            font-size: 24px;
            color: white;
        }

    .price {
        border: 1px solid #ddd;
        font-size: 1.2rem;
        color: transparent;
        margin-bottom: 20px;
    }

    /* Carousel styles */
    .product-image {
        margin-top:10px;
        position: relative;
        width: 100%;
        height: auto;
        overflow: hidden;
    }

    .carousel {
        width: 100%;
        max-width: 600px;
        overflow: hidden;
        position: relative;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .carousel-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .carousel img {
        object-fit:cover;
        width: 100%;
        height:500px;
        flex-shrink: 0;
    }

    .carousel-buttons {
        position: absolute;
        top: 50%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
    }

    .carousel-button {
        background: rgba(0, 0, 0, 0.5);
        border: none;
        color: white;
        font-size: 1.5rem;
        padding: 10px;
        cursor: pointer;
    }

        .carousel-button:hover {
            background: rgba(0, 0, 0, 0.7);
        }

    .product-details {
        flex: 1 1 60%;
    }

        .product-details h2 {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #ddd;
        }

    table {
        border-radius:5px;
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table td {
            padding: 8px 12px;
            border: 1px solid #ddd;
        }

            table td:first-child {
                font-weight: bold;
                color: #ddd;
            }

    .quot-btn {
        padding: 10px 20px;
        background-color: transparent;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        border: 1px solid #fff;
    }
   

    .pcontent {
        padding: 20px;
        text-align: justify;
        margin: 0 auto;
        background-color:transparent;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 94%;
        border-radius: 8px;
        color: #fff;
        border:1px solid #fff;
    }

    .next-btn {
        right: 0px;
    }
    @@media (max-width: 768px) {
        .product-card

    {
        padding:20px 10px;
        flex-direction: column;
        text-align: center;
    }

    .product-info {
        margin-right: 0;
        margin-bottom: 20px;
    }

    .product-image img {
        margin: 0 auto;
    }

    }
</style>
<section class="dark-section">
    <div class="section-content">
        <div class="breadcrumb">
            <h2>@Model.pname</h2>
            <a asp-action="Index">Home</a> <span>></span> <a asp-action="Products">Products</a> <span>></span> <a>@Model.pname</a>
        </div>
    </div>
    <div class="main-container">
        <div class="product-card">
            <div class="product-info">
                <h1>@Model.pname</h1>
                <!-- Carousel container with multiple images -->
                <div class="product-image">
                    <div class="carousel">
                        <div class="carousel-track">
                            <img src="~/upload/@Model.img1" alt="T-shirt Design 1">
                            <img src="~/upload/@Model.img2" alt="T-shirt Design 2">
                            <img src="~/upload/@Model.img3" alt="T-shirt Design 3">
                            <img src="~/upload/@Model.img4" alt="T-shirt Design 4">
                            <img src="~/upload/@Model.img5" alt="T-shirt Design 5">
                        </div>
                        <div class="carousel-buttons">
                            <button class="carousel-button" id="prev">&#10094;</button>
                            <button class="carousel-button" id="next">&#10095;</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-details">
                <h2>Product Details:</h2>
                <!-- Table with product details -->
                <table>
                    <tr>
                        <td>Fabric Type</td>
                        <td>@Model.fabric</td>
                    </tr>
                    <tr>
                        <td>Fabric Weight</td>
                        <td>@Model.fabric_weight</td>
                    </tr>
                    <tr>
                        <td>Weave Type</td>
                        <td>@Model.weave_type</td>
                    </tr>
                    <tr>
                        <td>Color/Pattern</td>
                        <td>@Model.color_pattern</td>
                    </tr>
                    <tr>
                        <td>Size Options</td>
                        <td>@Model.size</td>
                    </tr>
                    <tr>
                        <td>Fit Type</td>
                        <td>@Model.fit_type</td>
                    </tr>
                    <tr>
                        <td>Thread Count</td>
                        <td>@Model.thread_count</td>
                    </tr>
                    <tr>
                        <td>Stretchability</td>
                        <td>@Model.stretchability</td>
                    </tr>
                    <tr>
                        <td>Wash Care Instructions</td>
                        <td>@Model.wash_care</td>
                    </tr>
                    <tr>
                        <td>Closure Type</td>
                        <td>@Model.closure_type</td>
                    </tr>
                    <tr>
                        <td>Special Features</td>
                        <td>@Model.special_features</td>
                    </tr>
                    <tr>
                        <td>Season Suitability</td>
                        <td>@Model.season_suitability</td>
                    </tr>
                </table>
                <button class="quot-btn" onclick="openModal()">Request A Quote</button>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal" id="quoteModal">
            <div class="modal-content">
                <span class="close-btn" onclick="closeModal()">&times;</span>
                <h4>Request A Quote</h4>

                <!-- Success Message (hidden initially) -->
                <div id="successMessage" style="display:none; color: green; text-align: center;">
                    <p>Thank you! Your request has been successfully submitted.</p>
                </div>

                <form id="quoteForm" asp-action="EnquiryForm" method="post">
                    <div class="form-group">
                        <input type="text" id="name" name="name" placeholder="Enter your full name" required>
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <div class="form-group">
                        <input type="text" id="phone" name="phone" placeholder="Enter your phone number" required maxlength="10">
                    </div>
                    <div class="form-group">
                        <input type="text" id="sub" name="subject" placeholder="Enter Subject" required>
                    </div>
                    <div class="form-group">
                        <textarea id="message" name="msg" rows="4" placeholder="Enter your message"></textarea>
                    </div>
                    <button type="submit" class="submit-btn">Submit</button>
                </form>
            </div>
        </div>
        <div class="pcontent">
            @Html.Raw(Model.pcontent)
        </div>
    </div>

</section>
<script>
    function openModal() {
        document.getElementById('quoteModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('quoteModal').style.display = 'none';
    }

    // Close modal when clicking outside of it
    window.onclick = function(event) {
        const modal = document.getElementById('quoteModal');
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    };

     // Handle form submission
    document.getElementById("quoteForm").addEventListener("submit", function(event) {
        // Assuming the form submission is handled by ASP.NET on the server
        // event.preventDefault();  Prevent the default form submission

        // Simulate a successful form submission (replace this with actual form submission)
        setTimeout(function() {
            // Hide the form and show the success message
            document.querySelector("form").style.display = "none";
            document.getElementById("successMessage").style.display = "block";
        }, 300); // Simulated delay, replace with actual server-side handling
    });



     const track = document.querySelector('.carousel-track');
    const images = Array.from(track.children);
    const nextButton = document.getElementById('next');
    const prevButton = document.getElementById('prev');
    const imageWidth = images[0].getBoundingClientRect().width;

    let currentIndex = 0;

    const updateCarousel = () => {
        track.style.transform = `translateX(-${currentIndex * imageWidth}px)`;
    };

    nextButton.addEventListener('click', () => {
        if (currentIndex < images.length - 1) {
            currentIndex++;
            updateCarousel();
        }
    });

    prevButton.addEventListener('click', () => {
        if (currentIndex > 0) {
            currentIndex--;
            updateCarousel();
        }
    });
</script>
