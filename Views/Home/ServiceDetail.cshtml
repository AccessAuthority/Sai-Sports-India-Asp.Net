@model Service
@{
    ViewData["Title"] = "Service Details";
    Layout = "_Layout";
    var blog = ViewBag.Blog as SaiSports.Models.tbl_blog;
}
<style>
    body {
        color: white;
        background-image: url('@Url.Content("~/images/bg-footer2.jpg")');
        background-size: cover;
        background-attachment: fixed;
    }

    .ellipsis-1 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .ellipsis-8 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 8;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .breadcrumb {
        margin-top: 20px;
    }
    /* Container for the whole page */
    .container {
        padding-top: 10px;
        padding-bottom: 30px;
        width: 94%;
        margin: 0 auto;
    }

    .section-content {
        margin-top: 40px;
    }
    /* Main content layout */
    .main-content {
        display: flex;
        /* flex-wrap: wrap; */
        gap: 20px;
    }
    /* Blog content styling */
    .blog-content {
        flex: 3 1 100%; /* Take 60% width on larger screens */
    }

        .blog-content h1 {
            margin-bottom: 5px;
        }

    .date {
        color: white;
        font-size: 13px;
        margin-bottom: 10px;
    }

    .blog-image {
        width:100%;
        display: flex;
        gap: 20px;
    }

        .blog-image img {
            object-fit: cover;
            width: 40%;
            height: 300px;
            margin-bottom: 20px;
        }

    .desc {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 100%;
        height: auto;
        line-height:2em;
        margin-bottom: 20px;
    }

    .content {
        font-size: 1.1em;
        line-height: 1.6;
    }

    /* Responsive Styles */
    @@media (max-width: 1024px) {
        .blog-content h1 {
            font-size: 2em;
        }

        .blog-image {
            flex-direction: column;
        }

            .blog-image img {
                width: 100%;
                height: 300px;
                margin-bottom: 10px;
            }

        .desc {
            width: 100%;
            height: auto;
            margin-bottom: 20px;
        }

        .content {
            font-size: 1em;
        }

        .comments h3 {
            font-size: 1.5em;
        }
    }

    @@media (max-width: 768px) {
        .blog-image {
            flex-direction: column;
        }

            .blog-image img {
                width: 100%;
                height: 300px;
                margin-bottom: 10px;
            }

        .desc {
            width: 100%;
            height: auto;
            margin-bottom: 20px;
        }

        .main-content {
            flex-direction: column; /* Stack the content and sidebar */
        }

        .blog-content {
            flex: 1 1 100%; /* Blog content takes up full width */
        }

        .sidebar {
            flex: 1 1 100%; /* Sidebar takes full width on mobile */
            margin-top: 20px;
        }

        .blog-content h1 {
            font-size: 1.8em;
        }

        .content {
            font-size: 0.9em;
        }

        .comments h3 {
            font-size: 1.3em;
        }
    }

    /* Extra small screens (e.g., mobile) */
    @@media (max-width: 480px) {
        .blog-content h1 {
            font-size: 1.5em;
        }

        .date {
            font-size: 0.9em;
        }

        .content {
            font-size: 0.9em;
        }

        .sidebar {
            display: none; /* Hide sidebar on very small screens */
        }
    }
</style>
<section class="section-content">
    <div class="breadcrumb">
        <h2>@Model.Title</h2>
        <a asp-action="Index">Home</a> <span>></span> <a asp-action="Services">Services</a>  <span>></span> <a>@Model.Title</a>
    </div>
</section>
<div class="container">
    <div class="main-content">
        <!-- Blog Content -->
        <div class="blog-content">
                <div class="desc">
                    <h1>@Model.Title</h1>
                <p class="ellipsis-8">  @Html.Raw(Model.Description)</p>
                </div>
        </div>
    </div>
</div>