@model SaiSports.Models.tbl_enquiries

@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}
<style>
    /* Style the options inside the select */
    select option {
        background-color: #fff; /* Option background color */
        color: #000; /* Option text color */
    }

    ::placeholder{
        color:white;
        text-transform:capitalize;
    }
    .form-con{
        margin:10px;
        display:flex;
        width:100%;
        gap:30px;
    }
    /* Form Container */
    .form-container {
        background-color: rgba( 0, 0, 0, 0.3 );
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        box-sizing: border-box;
        border: 1PX solid #fff;
    }

    /* Input field styles */
    .form-control {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        box-sizing: border-box;
    }
    input, select{
        color:#fff;
        background-color: transparent;
    }
    /* Textarea styles */
    textarea.form-control {
        color: #fff;
        resize: vertical;
        height: 150px;
        background-color: transparent;
    }

    /* Button styles */
    .btn {
        width: 100%;
        padding: 12px;
        background-color:transparent;
        border: none;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        border: 1px solid #fff;
    }

    /* Map Section */
    .map-container {
        gap:20px;
        align-items:start;
        display:flex;
        flex-direction: column;
        border-radius: 4px;
        padding: 20px;
        border:1px solid #fff;
        width:100%;
    }

    .c-icon {
        padding: 10px;
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        background-color: white;
        color: black;
        margin-right: 10px;
    }
    /* Responsive design: stack elements on small screens */
    @@media screen and (max-width: 768px) {
      
        .form-con{
            flex-direction: column;
        }
    .form-container {
        padding: 15px;
    }

    .btn {
        font-size: 14px;
    }

    .map-container iframe {
        height: 300px;
        width:100%;
    }

    }

    @@media screen and (max-width: 480px) {
        .form-container

    {
        padding: 10px;
    }

    .btn {
        font-size: 14px;
        padding: 10px;
    }

    .map-container iframe {
        height: 250px;
            width: 100%;
        }

    }
</style>
<!-- contact Section -->
<section class="dark-section blog-sec">
    <section class="section-content">
        <div class="breadcrumb">
            <h2>Contact Us</h2>
            <a asp-action="Index">Home</a> <span>></span> <a>Contact Us</a> 
        </div>
    </section>
    <div data-aos="fade-up" class="section-content ">
       <div class="form-con">
            <!-- Form Container -->
            <div class="form-container">
                <form id="rform" method="post" asp-action="EnquiryForm">
                    <div>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
                    </div>

                    <div>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                    </div>

                    <div>
                        <input type="tel" class="form-control" id="tel" name="phone" placeholder="Enter your phone number" required maxlength="10">
                    </div>

                    <div>
                        <select class="form-control" id="subject" name="subject" required>
                            <option value="">Select an option</option>
                            <option value="Track Suits">Track Suits</option>
                            <option value="T-Shirt">T-Shirt</option>
                            <option value="Blazer">Blazer</option>
                            <option value="Jacket">Jacket</option>
                            <option value="Shirts">Shirts</option>
                            <option value="Shorts">Shorts</option>
                            <option value="Medical">Medical</option>
                            <option value="Safety Uniform">Safety Uniform</option>
                            <option value="Sweater">Sweater</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                    <div>
                        <textarea class="form-control" id="msg" name="msg" placeholder="Type your message here" required></textarea>
                    </div>

                    <div>
                        <button type="submit" class="btn">Send Message</button>
                    </div>
                </form>
            </div>

            <!-- Address Section -->
            <div class="map-container">
                <a href="tel:+919335907252" target="_blank"><i class="fa-solid fa-phone c-icon"></i> +91 9335907252</a>
                <a href="mailto:puri.saisports@gmail.com" target="_blank"><i class="fa-solid fa-envelope c-icon"></i> puri.saisports@gmail.com</a>
                    <a href="https://maps.app.goo.gl/DMd37f3hruesF6yf9" target="_blank">
                    <i class="fa-solid fa-location-crosshairs c-icon"></i> 2nd floor, K.B. Plaza, Love Lane,
        Hazratganj, Lucknow, 226001
                    </a>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d28476.373582731787!2d80.94906060321047!3d26.854366546357078!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x399bfd09eaaaaaab%3A0xa9ed2493543f497!2sSai%20Sports!5e0!3m2!1sen!2sin!4v1737976074364!5m2!1sen!2sin" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
       </div>
    </div>
</section>
<!--End  Section -->
<!-- Display SweetAlert if TempData has a message -->
@if (TempData["message"] != null)
{
    <script>
        Swal.fire({
            title: 'Notification',
            text: '@TempData["message"]',
            icon: 'success',
            confirmButtonText: 'Ok'
        });
    </script>
}