
@{
    ViewData["Title"] = "Career";
    Layout = "_Layout";
}
<style>
    .form-sec {
        background-color:transparent;
        justify-content:center;
        display:flex;
    }
    .hero-bg {
        padding:40px 40px 0px 40px;
    }

    .box {
        text-align: start;
        margin-top: 50px;
        padding: 20px;
        display: flex;
        align-items: start;
        justify-content: center;
        height: auto;
        width: 100%;
        background-color:transparent;
        flex-direction: column;
        color: #fff;
        gap: 10px;
    }

    .hire {
        font-weight: 600;
        color: white;
        border: 1px solid #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50px;
        height: 50px;
        width: 130px;
    }

    .form-container {
        max-width: 600px; /* Set a max-width for the form */
        margin: 0 auto; /* Center the form */
    }

    .thank-you-img {
        width: 100%; /* Ensure the image is responsive */
        max-width: 500px; /* Limit the image size */
        height: auto; /* Maintain aspect ratio */
    }

    .thank-you-text {
        padding: 20px;
    }

    .btn-h {
        color: white !important;
        background-color: #285282 !important;
    }

    .container {
        padding: 20px;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
    }
    .form-control{
        color:black !important;
        background-color:transparent !important;
    }
    /* General container styling */
    .container {
        margin-top: 50px;
    }

    /* Form container styling */
    .form-container {
        border: 2px solid #0066cc;
        border-radius: 10px;
        padding: 30px;
        background-color: #f9f9f9;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    /* Header styling */
    h5 {
        font-family: 'Arial', sans-serif;
        color: #333;
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    /* Form label and input styling */
    .form-label {
        font-weight: bold;
        color: #0066cc;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        font-size: 1rem;
    }

        /* Focus effect on form input fields */
        .form-control:focus {
            border-color: #0066cc;
            box-shadow: 0 0 5px rgba(0, 102, 204, 0.5);
        }

    /* Submit Button styling */
    .btn-custom {
        background-color: #0066cc;
        color: white;
        border: none;
        padding: 15px;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 5px;
    }

        .btn-custom:hover {
            background-color: #004c99;
            transition: background-color 0.3s ease-in-out;
        }

    /* Thank You Section */
    .thank-you-text {
        background-color: #ffffff;
        padding: 20px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .thank-you-img {
        max-width: 100%;
        border-radius: 10px;
    }

    .thank-you-text p {
        font-size: 1.2rem;
        color: #333;
        font-weight: bold;
        margin-top: 20px;
        font-family: 'Arial', sans-serif;
    }

    /* Mobile responsiveness */
    @@media (max-width: 768px) {
        .form-container

    {
        padding: 20px;
    }

    .btn-custom {
        padding: 12px;
        font-size: 1rem;
    }

    }
</style>

  <section class="dark-section">
    <!-- Client Section  Start-->
    <div class="hero-bg">
        <div class="box">
            <div class="hire"> We're hiring</div>
            <h3 class="white">Explore the opportunities and work with us </h3>
            <p>Are you passionate about sports and ready to take your career to the next level? We are looking for motivated,<br /> driven individuals to join our dynamic team at Sai Sports! Whether you're an experienced professional or new to the industry, <br /> we offer an exciting and supportive environment to help you succeed.</p>
            <p>Post Your CV - puri.saisports@gmail.com</p>
        </div>
    </div>
  </section>
<div class="container">
    <div class="row form-sec">
        <!-- Form Column -->
        <div class="col-12 col-md-6">
            <div class="form-container">
                <h5 class="text-center mb-4">Fill Out This Application</h5>
                <form asp-action="EnquiryForm" method="POST">
                    <input type="hidden">
                    <!-- Full Name -->
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>

                    <!-- Email Address -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <!-- Phone Number -->
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number:</label>
                        <input type="tel" class="form-control" id="phone" name="phone" required>
                    </div>

                    <!-- Resume Upload -->
                    <div class="mb-3">
                        <label for="resume" class="form-label">Upload Resume:</label>
                        <input type="file" class="form-control" id="resume" name="resume" accept=".pdf, .doc, .docx" required>
                    </div>

                    <!-- Cover Letter -->
                    <div class="mb-3">
                        <label for="message" class="form-label">Cover Letter:</label>
                        <textarea class="form-control" id="message" name="msg" rows="6" required></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-custom w-100">Apply Now</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Thank You Message Column -->
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
            <div class="thank-you-text text-center">
                <img src="https://img.freepik.com/free-vector/vintage-tailor-elements-set_1284-40613.jpg?t=st=1733980585~exp=1733984185~hmac=d2ee4e327d4a5aa97cc4a50e9bf6cf0ea0d14d464ddface8b32b208ae1909e6f&w=740" alt="Thank you image" class="thank-you-img">
                <p class="pt-4">Thank you for your interest in joining our team!</p>
            </div>
        </div>
    </div>
</div>

