@model IEnumerable<SaiSports.Models.tbl_blog>
@{
    ViewData["Title"] = "Blog";
    Layout = "_Layout";
}
<style>
    .ellipsis-3 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .cards-container {
    display: flex;
    gap: 20px;
    }

    .card {
    background-color:transparent;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 330px;
    display: flex;
    flex-direction: column;
        border: 1px solid #fff;
    }

    .card img {
    width: 100%;
    object-fit:cover;
    height: 300px;
    }

    .card-date {
        border: 1px solid #fff;
        background-color: rgba( 0, 0, 0, 0.8 );
    color: #fff;
    font-size: 14px;
    padding: 8px 12px;
    position: absolute;
    margin: 16px;
    margin-top: -50px;
    border-radius: 8px;
    }

    .card-content {
     text-align:start;
    padding: 10px;
    display: flex;
    flex-direction: column;
    }

    .card-title {
    font-size: 18px;
    font-weight: bold;
    margin: 0 0 8px 0;
    }

    .card-description {
    font-size: 14px;
    color: #ddd;
    margin: 0 0 16px 0;
    }

    .read-more {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    font-size: 14px;
    align-self: flex-start;
    }

    .read-more:hover {
    text-decoration: underline;
    }

    .section-content{
        gap: 10px;
        max-width: 1300px;
        margin: 0 auto;
        padding: 20px;
        padding-bottom:0px !important;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        width:100%;
    }

    .blog-sec{
        display:flex;
        flex-direction:column;
    }

    .footer-container{
    padding: 40px 40px;
    }
    /* Responsive Styles */
    @@media (max-width: 1024px) {
        .breadcrumb {
            margin-top: 40px !important;
        }
    }
    @@media (max-width: 768px) {
        .section-content{
         padding-bottom:0px;
        }
    .breadcrumb {
    margin-top: 40px !important;
    }

    .footer-container {
    padding: 40px 10px;
    }
    }
</style>

<!-- Blog Section -->
<section class="light-section blog-sec">
    <div class="section-content">
    <div class="breadcrumb">
        <h2>Latest Blogs & Articles</h2>
        <a asp-action="Index">Home</a> <span>></span> <a>Blog</a>
    </div>
    </div>
    <div data-aos="fade-up" class="section-content">
        <div class="unique-card-container">
            @foreach (var data in Model)
            {
                <div class="card">
                    <div style="position: relative;">
                        <img src="@data.img" alt="@data.title">
                        <div class="card-date">@DateTime.Parse(data.date).ToString("dd MMMM, yyyy")</div>
                </div>
                <div class="card-content">
                        <a href="/Home/BlogDetail/@data.title.Replace(' ', '-')" class="card-title unique-card-title">@data.title</a>
                        <div class="card-description ellipsis-3">@data.description</div>
                        <a href="/Home/BlogDetail/@data.title.Replace(' ', '-')" class="read-more">Read More &rarr;</a>
                </div>
            </div>
            }
        </div>
    </div>
</section>
<!-- Blog Section -->