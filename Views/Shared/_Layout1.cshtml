<style>
   /* General styles for the navigation */
#nav-links {
    list-style: none;
    margin: 0;
    padding: 0;
}

/* Styling for the dropdown container */
.dropdown {
    position: relative; /* Ensures the submenu is positioned relative to this container */
}

/* Initially hide the submenu */
.submenu {
    transition:1s;
    border-radius: 5px;
    width: 200px;
    border: 1px solid white;
    display: none; /* Hide the submenu by default */
    position: absolute; /* Positions the submenu below the About Us link */
    left:0;
    top: 20px;
    background-color: rgba(0, 0, 0, 0.7); /* Background color */
    list-style: none;
    padding: 15px;
    margin: 0;
    z-index: 10; /* Ensures the submenu is above other elements */
}

/* Styling for submenu items */
.submenu a {
    text-align:start;
    padding:0;
    margin:0;
    display: block;
    text-decoration: none;
    color: white;
    transition:1s;
}

/* Show the submenu when hovering over the dropdown */
.dropdown:hover .submenu {
    display: block; /* Show the submenu when hovering over the parent */
}

/* Dropdown icon rotation */
.dropdown-icon {
    margin-left: 5px;
    transition: transform 0.3s ease;
}

/* Rotate the icon when the submenu is shown (on hover) */
.dropdown:hover .dropdown-icon {
    transform: rotate(180deg);
}
.pb-5{
    border-bottom:1px solid white;
    padding-bottom:8px !important;
}

