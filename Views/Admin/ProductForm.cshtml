                <a class="sidebar-brand brand-logo-mini" asp-action="Dashboard"><img src="~/assets/images/logo-mini.png" alt="logo" /></a>
            </div>
            <ul class="nav">
                <li class="nav-item nav-category">
                    <span class="nav-link">Navigation</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Dashboard">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Dashboard</span>
                    </a>
                </li>

                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Products">
                        <span class="menu-icon">
                            <i class="mdi mdi-playlist-play"></i>
                        </span>
                        <span class="menu-title">Products </span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Enquiries">
                        <span class="menu-icon">
                            <i class="mdi mdi-table-large"></i>
                        </span>
                        <span class="menu-title">Enquiries</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Blog">
                        <span class="menu-icon">
                            <i class="mdi mdi-chart-bar"></i>
                        </span>
                        <span class="menu-title">Blog</span>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_navbar.html -->
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" asp-action="Dashboard"><img src="~/assets/images/logo-mini.png" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>
                    <ul class="navbar-nav navbar-nav-right">
                        <li class="nav-item dropdown">
                            <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
                                <div class="navbar-profile">
                                    <img class="img-xs rounded-circle" src="~/assets/images/favicon.png" alt="">
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">Welcome Admin!</p>
                                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                <a asp-action="Logout" class="dropdown-item preview-item">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-logout text-danger"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject mb-1">Log out</p>
                                    </div>
                                </a>
                            </div>
                        </li>
                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="col-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Product Listing Form</h4>
                                <form class="forms-sample" asp-action="ProductForm" method="post" enctype="multipart/form-data">
                                    <!-- Product Title -->
                                    <div class="form-group">
                                        <label for="productName">Product Name</label>
                                        <input type="text" class="form-control" id="productName" placeholder="Enter Product Name" asp-for="pname">
                                    </div>

                                    <!-- Category (Sports) -->
                                    <div class="form-group">
                                        <label for="category">Category</label>
                                        <select class="form-control" id="category" asp-for="pcategory">
                                            <option>Track Suits</option>
                                            <option>T-Shirt</option>
                                            <option>Blazer</option>
                                            <option>Jacket</option>
                                            <option>Shirts</option>
                                            <option>Shorts</option>
                                            <option>Medical</option>
                                            <option>Safety Uniform</option>
                                            <option>Sweater</option>
                                        </select>
                                    </div>

                                    <!-- Fabric Type  -->
                                    <div class="form-group">
                                        <label for="category">Category</label>
                                        <select class="form-control" id="category" asp-for="fabric">
                                            <option>Combed Cotton</option>
                                            <option>Combed PolyCotton</option>
                                            <option>PolyCotton Pique Knit</option>
                                            <option>Kooltron PolyCotton</option>
                                            <option>Mini Matt Polyester</option>
                                        </select>
                                    </div>

                                    <!-- Product Style -->
                                    <div class="form-group">
                                        <label for="price">Style</label>
                                        <input type="text" class="form-control" id="style" placeholder="Men/Women" asp-for="size">
                                    </div>

                                    <!-- Product size -->
                                    <div class="form-group">
                                        <label for="price">Size</label>
                                        <input type="text" class="form-control" id="price" placeholder="S, M, L, XL, XXL" asp-for="size">
                                    </div>

                                    <!-- Fabric Weight -->
                                    <div class="form-group">
                                        <label for="price">Fabric Weight</label>
                                        <input type="text" class="form-control" id="price" placeholder="GSM - Grams per Square Meter" asp-for="fabric_weight">
                                    </div>

                                    <!-- Product Stretchability -->
                                    <div class="form-group">
                                        <label for="quantity">Stretchability</label>
                                        <input type="text" class="form-control" id="quantity" placeholder="4-Way Stretch, Non-Stretchable" asp-for="stretchability">
                                    </div>

                                    <!-- Weave Type -->
                                    <div class="form-group">
                                        <label for="price">Weave Type</label>
                                        <input type="text" class="form-control" id="price" placeholder="Plain Weave, Twill, Satin, Poplin" asp-for="weave_type">
                                    </div>
                                    <!--Color/Pattern -->
                                    <div class="form-group">
                                        <label for="price">Color/Pattern</label>
                                        <input type="text" class="form-control" id="price" placeholder="Solid, Striped, Checked, Floral, Abstract" asp-for="color_pattern">
                                    </div>
                                    <!-- Fit Type -->
                                    <div class="form-group">
                                        <label for="price">Fit Type</label>
                                        <input type="text" class="form-control" id="price" placeholder="Regular Fit, Slim Fit, Loose Fit" asp-for="fit_type">
                                    </div>
                                    <!-- Thread Count -->
                                    <div class="form-group">
                                        <label for="price">Thread Count</label>
                                        <input type="text" class="form-control" id="price" placeholder="luxury fabrics" asp-for="thread_count">
                                    </div>
                                    <!-- Wash Care Instructions -->
                                    <div class="form-group">
                                        <label for="price">Wash Care Instructions</label>
                                        <input type="text" class="form-control" id="price" placeholder="Machine Wash, Dry Clean Only, Hand Wash" asp-for="wash_care">
                                    </div>
                                    <!-- Closure Type -->
                                    <div class="form-group">
                                        <label for="price">Closure Type</label>
                                        <input type="text" class="form-control" id="price" placeholder="Buttons, Zipper, Elastic Waistband" asp-for="closure_type">
                                    </div>
                                    <!-- Special Features -->
                                    <div class="form-group">
                                        <label for="price">Special Features</label>
                                        <input type="text" class="form-control" id="price" placeholder="Wrinkle-Resistant, Breathable, Quick-Dry, UV Protection" asp-for="special_features">
                                    </div>
                                    <!-- Season Suitability -->
                                    <div class="form-group">
                                        <label for="price">Season Suitability</label>
                                        <input type="text" class="form-control" id="price" placeholder="Summer Wear, Winter Wear, All-Season" asp-for="season_suitability">
                                    </div>

                                    <!-- Author Name -->
                                    <div class="form-group">
                                        <label for="authorName">Author</label>
                                        <input type="text" class="form-control" id="authorName" placeholder="Author Name" asp-for="author">
                                    </div>

                                    <!-- Description Name -->
                                    <div class="form-group">
                                        <label for="description">Product Description</label>
                                        <input type="text" class="form-control" id="description" placeholder="Product Short Description" asp-for="pdesc">
                                    </div>

                                    <!-- Product Date -->
                                    <div class="form-group">
                                        <label for="postDate">Date</label>
                                        <input type="date" class="form-control" id="postDate" asp-for="date">
                                    </div>


                                    <!-- Product Images Upload -->
                                    <div class="form-group">
                                        <label>Upload Product Images</label>

                                        <!-- Image 1 -->
                                        <div class="input-group col-xs-12 mb-2">
                                            <input type="file" name="img1" class="file-upload-default" id="imageUpload1" style="display: none;">
                                            <input type="text" class="form-control file-upload-info" id="fileInfo1" disabled placeholder="Upload Image 1">
                                            <label class="file-upload-browse custom-btn" for="imageUpload1">Upload Image 1</label>
                                        </div>

                                        <!-- Image 2 -->
                                        <div class="input-group col-xs-12 mb-2">
                                            <input type="file" name="img2" class="file-upload-default" id="imageUpload2" style="display: none;">
                                            <input type="text" class="form-control file-upload-info" id="fileInfo2" disabled placeholder="Upload Image 2">
                                            <label class="file-upload-browse custom-btn" for="imageUpload2">Upload Image 2</label>
                                        </div>

                                        <!-- Image 3 -->
                                        <div class="input-group col-xs-12 mb-2">
                                            <input type="file" name="img3" class="file-upload-default" id="imageUpload3" style="display: none;">
                                            <input type="text" class="form-control file-upload-info" id="fileInfo3" disabled placeholder="Upload Image 3">
                                            <label class="file-upload-browse custom-btn" for="imageUpload3">Upload Image 3</label>
                                        </div>

                                        <!-- Image 4 -->
                                        <div class="input-group col-xs-12 mb-2">
                                            <input type="file" name="img4" class="file-upload-default" id="imageUpload4" style="display: none;">
                                            <input type="text" class="form-control file-upload-info" id="fileInfo4" disabled placeholder="Upload Image 4">
                                            <label class="file-upload-browse custom-btn" for="imageUpload4">Upload Image 4</label>
                                        </div>

                                        <!-- Image 5 -->
                                        <div class="input-group col-xs-12 mb-2">
                                            <input type="file" name="img5" class="file-upload-default" id="imageUpload5" style="display: none;">
                                            <input type="text" class="form-control file-upload-info" id="fileInfo5" disabled placeholder="Upload Image 5">
                                            <label class="file-upload-browse custom-btn" for="imageUpload5">Upload Image 5</label>
                                        </div>
                                    </div>

                                    <!-- Product Description -->
                                    <div class="form-group">
                                        <label for="productDescription">Product Content</label>
                                        <textarea class="form-control" id="editor" placeholder="Enter Product Description" asp-for="pcontent" rows="4"></textarea>
                                    </div>

                                    <!-- Submit Button -->
                                    <button type="submit" class="btn btn-primary mr-2">Add Product</button>
                                    <button type="reset" class="btn btn-dark">Cancel</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/assets/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="~/assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="~/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/assets/js/dashboard.js"></script>
    <!-- End custom js for this page -->
    <!-- CKEditor Initialization -->
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
   
    <script>
        // Function to handle file upload and update text field
        function updateFileName(inputId, fileInfoId) {
            document.getElementById(inputId).addEventListener('change', function() {
                const filePath = this.value.split('\\').pop();  // Get the file name only
                document.getElementById(fileInfoId).value = filePath;  // Update input field
            });
        }

        // Call the function for each image upload
        updateFileName('imageUpload1', 'fileInfo1');
        updateFileName('imageUpload2', 'fileInfo2');
        updateFileName('imageUpload3', 'fileInfo3');
        updateFileName('imageUpload4', 'fileInfo4');
        updateFileName('imageUpload5', 'fileInfo5');
    </script>

</body>


</html>