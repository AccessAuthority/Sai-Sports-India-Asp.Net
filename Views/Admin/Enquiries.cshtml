    <script>
        // When the "View" button is clicked
        $('#viewModal').on('show.bs.modal', function (event) {
            // Get the button that triggered the modal
            var button = $(event.relatedTarget);

            // Extract the message from the data-message attribute
            var message = button.data('message');

            // Update the modal's content
            var modal = $(this);
            modal.find('.modal-body #fullMessage').text(message); // Set the full message inside the modal body
        });
    </script>
    <script>
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function(event) {
                event.preventDefault(); // Prevent the default action

                const postId = this.getAttribute('data-id'); // Get the ID from the data attribute

                Swal.fire({
                    title: 'Are you sure?',
                    text: 'Do you really want to delete this enquiry?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, keep it'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // If confirmed, redirect to the delete action
                        window.location.href = '@Url.Action("DeleteEnquiry", "Admin")/' + postId; // Adjust as needed
                    }
                });
            });
        });
    </script>
</body>


